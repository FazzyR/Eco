@model Eco.Models.Product

@using (Html.BeginForm("Add", "Product", FormMethod.Post))
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    @Html.LabelFor(model => model.Description)
    @Html.TextBoxFor(model => model.Description)
    @Html.LabelFor(model => model.Price)
    @Html.TextBoxFor(model => model.Price)
    @Html.LabelFor(model => model.ImageURL)
    @Html.TextBoxFor(model => model.ImageURL)
    <!-- Add other input fields for product details -->

    <button type="submit" asp-controller="Admin" asp-action="Add">Add Product</button>

}
